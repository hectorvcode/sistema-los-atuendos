{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "../src/**/*.{ts,js}",
    "!../src/main.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.dto.ts",
    "!../src/**/*.entity.ts",
    "!../src/**/*.module.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["./setup-tests.ts"]
}
