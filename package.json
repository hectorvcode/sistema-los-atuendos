{
  "name": "los-atuendos",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --testPathIgnorePatterns=.e2e-spec.ts --runInBand",
    "test:unit:watch": "jest --watch --testPathIgnorePatterns=.e2e-spec.ts",
    "test:unit:cov": "jest --coverage --testPathIgnorePatterns=.e2e-spec.ts --runInBand",
    "test:patterns": "cross-env NODE_ENV=test jest src/patterns/ --coverage --runInBand",
    "test:patterns:watch": "cross-env NODE_ENV=test jest src/patterns/ --watch --runInBand",
    "test:factory": "cross-env NODE_ENV=test jest src/patterns/creational/test/factory.spec.ts --runInBand",
    "test:builder": "cross-env NODE_ENV=test jest src/patterns/creational/test/builder.spec.ts --runInBand",
    "test:singleton": "cross-env NODE_ENV=test jest src/patterns/creational/test/singleton.spec.ts --runInBand",
    "test:decorator": "cross-env NODE_ENV=test jest src/patterns/structural/decorator/test/decorator.spec.ts --runInBand",
    "test:adapter": "cross-env NODE_ENV=test jest src/patterns/structural/adapter/test/adapter.spec.ts --runInBand",
    "test:composite": "cross-env NODE_ENV=test jest src/patterns/structural/composite/test/composite.spec.ts --runInBand",
    "test:facade": "cross-env NODE_ENV=test jest src/patterns/structural/facade/test/facade.spec.ts --runInBand",
    "test:structural": "cross-env NODE_ENV=test jest src/patterns/structural/ --coverage --runInBand",
    "test:creational": "cross-env NODE_ENV=test jest src/patterns/creational/ --coverage --runInBand",
    "test:behavioral": "cross-env NODE_ENV=test jest src/patterns/behavioral/ --coverage --runInBand",
    "test:command": "cross-env NODE_ENV=test jest src/patterns/behavioral/command/test/ --runInBand",
    "test:observer": "cross-env NODE_ENV=test jest src/patterns/behavioral/observer/test/ --runInBand",
    "test:strategy": "cross-env NODE_ENV=test jest src/patterns/behavioral/strategy/test/ --runInBand",
    "test:state": "cross-env NODE_ENV=test jest src/patterns/behavioral/state/test/ --runInBand",
    "test:all": "npm run test:unit",
    "test:all:cov": "npm run test:unit:cov",
    "seed:run": "ts-node src/database/seeds/run-seeds.ts",
    "seed:complete": "ts-node src/database/seeds/run-complete-seed.ts",
    "seed:demo": "ts-node src/database/seeds/run-demo.ts",
    "db:reset": "ts-node src/database/seeds/run-cleanup.ts",
    "db:clean": "ts-node src/database/seeds/run-cleanup.ts",
    "db:seed": "npm run seed:complete"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/typeorm": "^11.0.0",
    "@types/lodash": "^4.17.20",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "lodash": "^4.17.21",
    "mysql2": "^3.15.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.0",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.ts"
    ],
    "testTimeout": 30000,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
